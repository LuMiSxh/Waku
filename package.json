{
	"name": "waku",
	"version": "1.0.0",
	"description": "A modern SvelteKit component library with flexible theming",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run build:package && npm run build:app",
		"build:app": "vite build",
		"build:package": "svelte-kit sync && svelte-package",
		"package": "npm run build:package",
		"prepare": "npm run build:package",
		"prepublishOnly": "npm run build:package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"sideEffects": [
		"**/*.css"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./components": {
			"types": "./dist/components/index.d.ts",
			"svelte": "./dist/components/index.js"
		},
		"./layout": {
			"types": "./dist/layout/index.d.ts",
			"svelte": "./dist/layout/index.js"
		},
		"./actions": {
			"types": "./dist/actions/index.d.ts",
			"default": "./dist/actions/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/types/index.js"
		},
		"./styles": {
			"types": "./dist/styles/index.d.ts",
			"default": "./dist/styles/index.js"
		},
		"./styles/*": "./dist/styles/*",
		"./package.json": "./package.json"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"typesVersions": {
		">4.0": {
			".": [
				"./dist/index.d.ts"
			]
		}
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.46.4",
		"svelte": "^5.39.5"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"@sveltejs/adapter-auto": "^6.1.1",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tabler/icons-svelte": "^3.35.0",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24.10.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"prettier": "3.3.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.15",
		"svelte": "^5.45.2",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.0",
		"vite": "^7.2.4"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"@tailwindcss/oxide"
		]
	}
}
